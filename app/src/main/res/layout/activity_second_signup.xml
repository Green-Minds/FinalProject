<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SecondSignupActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/secondSignupToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolbarColoredBackArrow">

        <TextView
            android:id="@+id/connectionTitle"
            style="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:gravity="top"
            android:maxLines="2"
            android:title="Create Account"
            android:text="Create Account"/>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondSignupToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Connect through: "
        android:textColor="@android:color/black" />

    <RadioGroup
        android:id="@+id/rgSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvConnect"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <RadioButton
            android:id="@+id/rbSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School" />

        <RadioButton
            android:id="@+id/rbWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work" />
    </RadioGroup>

    <EditText
        android:id="@+id/etCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgSelection"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="Name of Company"
        android:inputType="textPersonName"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/autocomplete_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgSelection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <green_minds.com.finalproject.model.DelayAutoCompleteTextView
            android:id="@+id/atvSchoolName"
            style="@style/PrimaryEditText"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="141dp"
            android:hint=" School                                   " />

        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

    </FrameLayout>

    <Button
        android:id="@+id/btnConnectNext"
        style="@style/SecondaryPurpleButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:enabled="false"
        android:text="Next"/>

</RelativeLayout>