<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.SplashActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/quicksand_medium"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/splashscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/sphere_slower2" />

    <Button
        android:id="@+id/btnLoginPage"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_above="@+id/tvFbLogin"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_toLeftOf="@+id/textView12"
        android:background="@android:color/white"
        android:onClick="gotoLogin"
        android:text="Login"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSignupPage"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_above="@+id/tvFbLogin"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/textView12"
        android:background="@android:color/white"
        android:onClick="gotoSignup"
        android:text="SignUp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnLoginviaFB"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:onClick="facebookLogin"
        android:text="Login with Facebook"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-220dp" />

    <TextView
        android:id="@+id/tvFbLogin"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="facebookLogin"
        android:text="Log In With Facebook"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvFbLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="OR"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <View
        android:id="@+id/view1"
        android:layout_width="115dp"
        android:layout_height="1dp"
        android:layout_above="@+id/tvFbLogin"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="40dp"
        android:layout_toLeftOf="@+id/textView12"
        android:background="@drawable/border"
        android:visibility="gone" />

    <View
        android:id="@+id/view2"
        android:layout_width="115dp"
        android:layout_height="1dp"
        android:layout_above="@+id/tvFbLogin"
        android:layout_marginBottom="21dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/textView12"
        android:background="@drawable/border"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

</RelativeLayout>