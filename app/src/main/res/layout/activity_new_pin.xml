<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NewPinActivity">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Make a new pin"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="31dp" />

    <Button
        android:id="@+id/btn_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Pin it!"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="435dp" />

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_pin"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="comments"
        android:inputType="textMultiLine" />

    <RadioGroup
        android:id="@+id/rb_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp">

        <RadioButton
            android:id="@+id/rb_bottles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bottles / Cans" />

        <RadioButton
            android:id="@+id/rb_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Water Fountains" />

        <RadioButton
            android:id="@+id/rb_bikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bike Racks" />

        <RadioButton
            android:id="@+id/rb_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Coffee shop with discount" />

        <RadioButton
            android:id="@+id/rb_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batteries / Electronic Waste" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rb_categories"
        android:layout_alignStart="@+id/et_comment"
        android:layout_marginBottom="-84dp"
        android:text="Please choose a category." />

    <FrameLayout
        android:id="@+id/img_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/et_comment"
        android:layout_marginBottom="124dp">

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="fitXY"
            app:srcCompat="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_upload"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="please upload an image."
            android:textColor="#FFFFFF"
            android:textStyle="italic" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/btn_camera"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/img_frame"
        android:layout_alignEnd="@+id/tv_header"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:padding="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/camera" />

</RelativeLayout>