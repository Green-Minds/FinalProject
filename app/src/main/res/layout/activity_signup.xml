<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignupActivity">

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="REGISTER"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:id="@+id/etUsernameInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvRegister"
        android:layout_marginTop="109dp"
        android:background="@drawable/text_input_border"
        android:ems="10"
        android:hint=" Username "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etEmailInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvRegister"
        android:layout_marginTop="162dp"
        android:background="@drawable/text_input_border"
        android:ems="10"
        android:hint=" Email "
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etPasswordInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvRegister"
        android:layout_marginTop="210dp"
        android:background="@drawable/text_input_border"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/tvConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="235dp"
        android:text="Connect through: "
        android:textColor="@android:color/black" />

    <RadioGroup
        android:id="@+id/rgSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="195dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <RadioButton
            android:id="@+id/rbSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School" />

        <RadioButton
            android:id="@+id/rbWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work" />
    </RadioGroup>

    <EditText
        android:id="@+id/etCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgSelection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-173dp"
        android:ems="10"
        android:hint="Name of Company"
        android:inputType="textPersonName"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvUsernameTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:text="TextView"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/autocomplete_container"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp">

        <green_minds.com.finalproject.model.DelayAutoCompleteTextView
            android:id="@+id/atvSchoolName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="141dp"
            android:background="@drawable/text_input_border"
            android:hint=" School                                   " />

        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:visibility="gone" />

    </FrameLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fbSignupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="91dp" />

    <ImageView
        android:id="@+id/ivUserImg"
        android:layout_width="117dp"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="117dp"
        android:adjustViewBounds="true"
        android:background="@drawable/placeholder"
        android:clickable="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:text="OR"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvImg"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvConnect"
        android:layout_toStartOf="@+id/rgSelection"
        android:text="Change image "
        android:textColor="@android:color/black" />

</RelativeLayout>