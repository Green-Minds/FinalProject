<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignupActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/signupToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolbarColoredBackArrow">

        <TextView
            android:id="@+id/connectionTitle"
            style="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:gravity="top"
            android:maxLines="2"
            android:title="Create Account"
            android:text="Create Account"/>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUsernameInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tvRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/text_input_border"
        android:ems="10"
        android:hint=" Username "
        android:inputType="textPersonName"
        android:maxLength="30" />

    <EditText
        android:id="@+id/etEmailInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/etUsernameInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/text_input_border"
        android:ems="10"
        android:hint=" Email Address "
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etPasswordInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/etEmailInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/text_input_border"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnInfoNext"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_below="@+id/etPasswordInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:background="@color/colorPrimary"
        android:enabled="false"
        android:text="Next"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvUsernameTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="TextView"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone" />

</RelativeLayout>